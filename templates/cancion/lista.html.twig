            {{ mensaje }}
        </div>
    {% endfor %}
    {% for mensaje in app.flashes('exito') %}
        <div>
            {{ mensaje }}
        </div>
    {% endfor %}

    <a href="{{ path('cancion_listar') }}" class="btn btn-primary">nuevo</a>
    <table class="table table-bordered table-hover table-striped">
        <thead>
